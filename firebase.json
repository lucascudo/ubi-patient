{
  "hosting": {
    "public": "dist/ubi-patient/browser",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/en/**",
        "destination": "/en/index.html"
      },
      {
        "source": "/pt/**",
        "destination": "/pt/index.html"
      }
    ],
    "redirects": [
      {
        "source": "/",
        "destination": "/pt/",
        "type": 301
      },
      {
        "source": "/login",
        "destination": "/pt/",
        "type": 301
      }
    ]
  }
}
